<h3> Tweet Confirmation </h3>

<%= form_with(model: @tweet, url: tweet_path, local:true) do |form| %>
    <%= form.hidden_field :tweet %>
       <p>You want to Tweet : <%= @tweet.tweet %></p>
    <%= form.submit  "Submit" %>
<% end %>

<%= form_with(model: @tweet, url: new_tweet_path, local:true,method: 'get') do |form| %>
    <%= form.hidden_field :tweet %>
    <%= form.submit  "back", name: 'back' %>
<% end %>
